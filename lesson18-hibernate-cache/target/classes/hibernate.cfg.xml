<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<!-- JDBC Database connection settings -->
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://127.0.0.1:3306/java08_compman_ls18ex</property>
		<property name="connection.username">root</property>
		<property name="connection.password">Password123@</property>

		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<property name="current_session_context_class">thread</property>

		<property name="connection.autocommit">false</property>

		<!-- 1st level cache -->

		<!-- 2nd level cache -->
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
		<property name="hibernate.cache.provider_configuration_file_resource_path">ehcache.xml</property>

		<!-- query cache -->
		<!-- <property name="cache.use_query_cache">true</property> -->

		<mapping class="persistence.Department" />
		<mapping class="persistence.Employee" />
		<mapping class="persistence.Project" />

	</session-factory>

</hibernate-configuration>